<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_card"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp"
    android:layout_marginBottom="10dp"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginBottom="15dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/acronym_Card"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="start"
                android:layout_marginLeft="0dp"


                app:cardCornerRadius="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/acronym_text"
                    android:text="IT"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/job_title_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Post bank Intern"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/acronym_Card"
                android:layout_weight="1"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/book_mark"
                android:layout_gravity="end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_bookmark"
                android:textSize="20sp"
                android:textStyle="italic"
                />
            <TextView
                android:id="@+id/deadline_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="deadline: 12/2/2023"
                android:textSize="18sp"
                android:layout_below="@+id/job_title_data"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/acronym_Card"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/posted_date_data"

                android:layout_toRightOf="@+id/acronym_Card"
                android:layout_below="@+id/deadline_date_data"

                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="3d ago"
                android:textSize="18sp"
                android:textStyle="italic"/>






        </RelativeLayout>


</androidx.cardview.widget.CardView>



