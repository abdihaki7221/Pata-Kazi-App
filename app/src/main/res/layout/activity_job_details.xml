<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".job_details"
        android:orientation="vertical">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/relative_details_1"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/card_back"
            android:padding="10dp"
            android:elevation="12dp"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTint="@color/white"
                android:drawableStart="@drawable/ic_back"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="Job Details"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:elevation="12dp"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/purple_500"
            android:background="@drawable/card_border"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTint="@color/white"
                android:drawableStart="@drawable/ic_bookmark"/>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:id="@+id/card_job"
        android:elevation="12dp"

        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_border"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

       android:layout_below="@+id/relative_details_1"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/job_title_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Engineer"

                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"


                />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nairobi"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
               android:layout_below="@+id/job_title_details"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_location"
                android:drawableTint="@color/grey"



                />
        </RelativeLayout>



        </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_Description"
        android:layout_below="@+id/card_job"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/description_txt"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are looking for a passionate Software Engineer to design, develop and install software solutions"
            android:id="@+id/description_job_details"
            android:layout_below="@+id/description_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requirements"
            android:id="@+id/responsibilities_txt"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@id/description_job_details"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Develop software verification plans and quality assurance procedures"
            android:id="@+id/responsibilities_job_1"
            android:layout_below="@+id/responsibilities_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"


            />




    </RelativeLayout>






        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Now"
            android:textAllCaps="false"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/curved_btn"
            android:id="@+id/apply_btn"


            />

    </LinearLayout>




</ScrollView>