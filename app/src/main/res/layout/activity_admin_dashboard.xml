<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:id="@+id/layout1">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"


            android:elevation="4dp"
            android:backgroundTint="@color/purple_500"
           android:layout_alignParentLeft="true"
            android:padding="10dp"
            app:cardCornerRadius="6dp"
            android:id="@+id/add_admins">

            <TextView
                android:layout_width="124dp"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_admins"
                android:drawableTint="@color/white"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Register Admin"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:elevation="4dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/purple_500"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            app:cardCornerRadius="6dp"
            android:id="@+id/add_jobs">

            <TextView
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_admin_jobs"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:text="Post Jobs"
                android:textColor="@color/white" />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:padding="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="100dp"

            android:layout_marginLeft="10dp"
            android:elevation="4dp"
            android:backgroundTint="@color/purple_500"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            app:cardCornerRadius="6dp"
            android:id="@+id/view_applications">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_view"
                android:drawableTint="@color/white"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="View Applications"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:elevation="4dp"

            android:paddingLeft="10dp"
            android:backgroundTint="@color/purple_500"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            app:cardCornerRadius="6dp"
            android:id="@+id/qualified_applicants">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_selected"
                android:drawableTint="@color/white"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Selected Applicants"/>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_bottom_linear">

        <TextView
            android:id="@+id/jobs_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_jobs"
            android:drawableTint="@color/purple_500"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/job_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_job_status"
            android:gravity="center_horizontal"
            android:drawableTint="@color/purple_500"
            />

        <TextView
            android:id="@+id/news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@drawable/ic_news"
            android:drawableTint="@color/purple_500"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_account"
            android:drawableTint="@color/purple_500"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
</RelativeLayout>